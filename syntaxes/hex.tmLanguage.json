{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CS241 Hex",
  "patterns": [
    {
      "name": "hex.comment",
      "begin": ";",
      "end": "\\n"
    },
    {
      "name": "hex.variable",
      "match": "\\$([0-9])+"
    },
    {
      "name": "hex.keyword",
      "match": "add|sub"
    },
    {
      "name": "hex.number",
      "match": "[0-9]+|-[0-9]+"
    },
    {
      "name": "hex.string",
      "match": "\\w+"
    }
  ],
  "scopeName": "source.hex"
}
